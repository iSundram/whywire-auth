name = "whywire-auth"
compatibility_date = "2024-07-01"

# Static export build output directory
pages_build_output_dir = ".next/out"

# Production environment for auth.whywire.app
[env.production.vars]
NEXT_PUBLIC_APPWRITE_ENDPOINT = "https://cloud.appwrite.io/v1"
NEXT_PUBLIC_AUTH_DOMAIN = "https://auth.whywire.app"
NEXT_PUBLIC_DASHBOARD_URL = "https://dashboard.whywire.app"
NEXTAUTH_URL = "https://auth.whywire.app"

# Preview environment
[env.preview.vars]
NEXT_PUBLIC_APPWRITE_ENDPOINT = "https://cloud.appwrite.io/v1"
NEXT_PUBLIC_AUTH_DOMAIN = "https://auth-preview.whywire.app"
NEXT_PUBLIC_DASHBOARD_URL = "https://dashboard-preview.whywire.app"
NEXTAUTH_URL = "https://auth-preview.whywire.app"

# Configure these environment variables in Cloudflare Dashboard:
# - NEXT_PUBLIC_APPWRITE_PROJECT (your Appwrite project ID)
# - NEXT_PUBLIC_APPWRITE_DATABASE_ID (optional)
# - NEXT_PUBLIC_APPWRITE_USER_COLLECTION_ID (optional)
# - NEXTAUTH_SECRET (generate a secure random string)